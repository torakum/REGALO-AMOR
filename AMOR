    <script>
        // 1. CONFIGURACIÓN - Pon aquí la fecha en que empezaron
        // Formato: Año, Mes (0-11), Día, Hora, Minuto
        const startDate = new Date(2019,06,11,0,0,0); 

        function updateTimer() {
            const now = new Date();
            const diff = now - startDate;

            const d = Math.floor(diff / (1000 * 60 * 60 * 24));
            const h = Math.floor((diff / (1000 * 60 * 60)) % 24);
            const m = Math.floor((diff / (1000 * 60)) % 60);
            const s = Math.floor((diff / 1000) % 60);

            document.getElementById('days').innerText = d;
            document.getElementById('hours').innerText = h;
            document.getElementById('minutes').innerText = m;
            document.getElementById('seconds').innerText = s;
        }

        setInterval(updateTimer, 1000);
        updateTimer();

        // 2. ANIMACIÓN DEL JARDÍN (Canvas)
        const canvas = document.getElementById('garden-canvas');
        const ctx = canvas.getContext('2d');
        let petals = [];

        function resize() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resize);
        resize();

        class Petal {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 5 + 2;
                this.speed = Math.random() * 1 + 0.5;
                this.angle = Math.random() * Math.PI * 2;
                this.color = `rgba(255, ${Math.random() * 100 + 100}, ${Math.random() * 150 + 100}, ${Math.random() * 0.5 + 0.2})`;
            }
            draw() {
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
            update() {
                this.y += this.speed;
                this.x += Math.sin(this.angle) * 0.5;
                if (this.y > canvas.height) this.y = -10;
            }
        }

        for (let i = 0; i < 100; i++) petals.push(new Petal());

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            petals.forEach(p => {
                p.update();
                p.draw();
            });
            requestAnimationFrame(animate);
        }
        animate();
    </script>
</body>
